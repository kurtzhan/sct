<p id="notice"><%= notice %></p>

<h1>Listing Product Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_pictures.each do |product_picture| %>
      <tr>
        <td><%= product_picture.product_id %></td>
        <td><%= product_picture.picture_id %></td>
        <td><%= link_to 'Show', product_picture %></td>
        <td><%= link_to 'Edit', edit_product_picture_path(product_picture) %></td>
        <td><%= link_to 'Destroy', product_picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

