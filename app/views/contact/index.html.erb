<div class="container">
  <div class="row" style="padding: 10px;padding-left:15px;">
      <div class="panel panel-default">
         <div class="panel-heading" style="background: #cd665f; color: #fff; font-size:14px;">Contact</div>
         <div class="panel-body" style="background: #eeeeee;">
<% if @flash_message %>
<div class="flash-message <%= @succeed ? "notice" : "error" %>">
  <div class="container container_12 clearfix">
    <%= @flash_message %>
  </div>
</div>
<% end %>
<%= form_tag('/contact', :class => 'form-horizontal') do %>
  <div class="form-group">
    <label for="company" class="col-sm-2 control-label">Company</label>
    <div class="col-sm-10">
      <input type="text" id="company" class="form-control" placeholder="Company" name="message[company]" value="<%= @succeed == false ? params[:message][:company] : '' %>">
    </div>
  </div>
  <div class="form-group">
    <label for="message_country" class="col-sm-2 control-label">Country</label>
    <div class="col-sm-10">
      <%= country_select :message, :country, {selected: @succeed == false ? params[:message][:country] : nil},  { :class => "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <label for="address" class="col-sm-2 control-label">Address</label>
    <div class="col-sm-10">
      <input type="text" id="address" class="form-control" placeholder="Address" name="message[address]" value="<%= @succeed == false ? params[:message][:address] : '' %>">
    </div>
  </div>
  <div class="form-group">
    <label for="zip" class="col-sm-2 control-label">Zip Code</label>
    <div class="col-sm-10">
      <input type="text" id="zip" class="form-control" placeholder="Zip Code" name="message[zip_code]" value="<%= @succeed == false ? params[:message][:zip_code] : '' %>">
    </div>
  </div>
  <div class="form-group">
    <label for="gender" class="col-sm-2 control-label">Gender</label>
    <div class="col-sm-10">
      <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-default active"><input type="radio" name="message[gender]" value="Mr." required="required" checked="checked">Mr.</label>
      <label class="btn btn-default"><input type="radio" name="message[gender]" value="Ms.">Ms.</label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" id="name" class="form-control" placeholder="Name" name="message[name]" value="<%= @succeed == false ? params[:message][:email] : '' %>">
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="email" placeholder="Email" name="message[email]" required="required" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" value="<%= @succeed == false ? params[:message][:email] : '' %>">
    </div>
  </div>
  <div class="form-group">
    <label for="email2" class="col-sm-2 control-label">Email 2</label>
    <div class="col-sm-10">
      <input type="text" id="email2" class="form-control" placeholder="Email 2" name="message[email_2]" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" value="<%= @succeed == false ? params[:message][:email_2] : '' %>">
    </div>
  </div>
  <div class="form-group">
    <label for="telephone" class="col-sm-2 control-label">Telephone</label>
    <div class="col-sm-10">
      <input type="text" id="telephone" class="form-control" placeholder="Telephone" name="message[telephone]" value="<%= @succeed == false ? params[:message][:telephone] : '' %>">
    </div>
  </div>
  <div class="form-group">
    <label for="message" class="col-sm-2 control-label">Message</label>
    <div class="col-sm-10">
<textarea id="message" placeholder="Textarea" rows="3" class="form-control" name="message[body]" required="required"><%= @succeed == false ? params[:message][:body] : '' %></textarea>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Verification</label>
    <div class="col-sm-10">
    <%= show_simple_captcha %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Send to SinoBronze MFG Co., Ltd.</button>
    </div>
  </div>  
<% end %>
         </div>
      </div>
   </div>
</div>
