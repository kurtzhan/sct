<style>
.flash-message {
  margin-left:160px;
  margin-bottom:20px;
  padding: 5px;
}
.error {
 border: solid 1px #ebccd1;
 background-color: #f2dede;
 color: #a94442;
}
.notice {
 border: solid 1px #dff0d8;
 background-color: #d6e9c6;
 color: #3c763d;
}

</style>
<div class="container">
  <div class="row" style="padding: 10px;padding-left:15px;">
      <div class="panel panel-default">
         <div class="panel-heading" style="background: #cd665f; color: #fff; font-size:14px;">Contact</div>
         <div class="panel-body" style="background: #eeeeee;">
<% if @flash_message %>
<div class="flash-message <%= @succeed ? "notice" : "error" %>">
  <div class="container container_12 clearfix">
    <%= @flash_message %>
  </div>
</div>
<% end %>
<%= form_tag('/contact', :class => 'form-horizontal') do %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="email" required="required" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" value="<%= @succeed == false ? params[:email] : '' %>">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Message</label>
    <div class="col-sm-10">
<textarea placeholder="Textarea" rows="3" class="form-control" name="body" required="required"><%= @succeed == false ? params[:body] : '' %></textarea>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">I'm not a robot</label>
    <div class="col-sm-10">
    <%= show_simple_captcha %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>  
<% end %>
         </div>
      </div>
   </div>
</div>
